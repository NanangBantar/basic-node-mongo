<div class="card card-primary">
    <div class="card-header">
        <div class="header-block">
            <p class="title text-white"> USER ID :
                <%- data.id %>
            </p>
        </div>
    </div>
    <div class="card-block">
        <p><span class="font-weight-bold">Email</span> : <%- data.email %>
        </p>
        <p><span class="font-weight-bold">Status</span> :
            <% if(_.isEmpty(data.user_data)){ %>
                <button class="btn btn-light text-dark border border-dark rounded" type="button"><i
                        class="fa fa-times-circle-o text-danger"></i> Not
                    Verified</button>
                <% }else{ %>
                    <button class="btn btn-light text-dark border border-dark rounded" type="button"><i
                            class="fa fa-check-circle-o text-success"></i> Verified</button>
                    <% } %>
        </p>
        <div class="dropdown-divider"></div>
        <ul class="nav nav-tabs nav-tabs-bordered">
            <li class="nav-item">
                <a href="#personal" class="nav-link active" data-target="#personal" data-toggle="tab" aria-controls="personal"
                    role="tab" aria-selected="true">
                    Personal Data
                </a>
            </li>
            <li class="nav-item">
                <a href="#division" class="nav-link" data-target="#division" aria-controls="division" data-toggle="tab"
                    role="tab" aria-selected="false">
                    My Division
                </a>
            </li>
            <li class="nav-item">
                <a href="#attendance" class="nav-link" data-target="#attendance" aria-controls="attendance" data-toggle="tab"
                    role="tab" aria-selected="false">
                    Attendance Data
                </a>
            </li>
            <li class="nav-item">
                <a href="" class="nav-link" data-target="#document" aria-controls="document" data-toggle="tab"
                    role="tab" aria-selected="false">
                    My Document
                </a>
            </li>
            <li class="nav-item">
                <a href="" class="nav-link" data-target="#settings" aria-controls="settings" data-toggle="tab"
                    role="tab" aria-selected="false">
                    Settings
                </a>
            </li>
        </ul>

        <div class="tab-content tabs-bordered">
            <div class="tab-pane fade in active show" id="personal">
                <%- include('components/Personalform'); %>
            </div>
            <div class="tab-pane fade" id="division">
                <%- include('components/Mydivision'); %>
            </div>
            <div class="tab-pane fade" id="attendance">
                <%- include('components/Attendanceform'); %>
            </div>
            <div class="tab-pane fade" id="document">
                <%- include('components/Mydocument'); %>
            </div>
            <div class="tab-pane fade" id="settings">
                <%- include('components/Settings'); %>
            </div>
        </div>

    </div>
</div>
<%- include('../common/basicmodal'); %>